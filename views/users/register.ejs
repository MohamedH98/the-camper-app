<% layout('layouts/boilerplate') %>

<% layout('layouts/boilerplate') %>

<div class="container">
  <div class="row d-flex justify-content-center align-items-center my-5">
    <div class="card bg-dark text-white col-12 col-sm-10 col-lg-8 shadow">
      <h5 class="card-title m-3">Register</h5>
      <img
        class="card-img-top"
        src="https://images.unsplash.com/photo-1478827217976-7214a0556393?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1350&q=80"
        alt="Card image cap"
      />
      <div class="card-body">
        <form action="/register" method="POST" novalidate class="validatedform">
          <div clas="mb-3">
            <label class="form-label" for="username">Username</label>
            <input
              class="form-control"
              type="text"
              id="username"
              name="username"
              required
            />
            <div class="valid-feedback">Looks good</div>
          </div>
          <div clas="mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="email" id="email" name="email" required />
            <div class="valid-feedback">Looks good</div>
          </div>

        <div clas="mb-3">
          <label class="form-label" for="password">Password</label>
          <input class="form-control" type="password" id="password" name="password" required />
          <div class="valid-feedback">Looks good</div>
        </div>
          <div class="my-3">
            <button class="btn btn-success">Submit</button>
          </div>
        </form>
      </div>
    </div>
    </div>
  </div>
</div>
